doctype html
html(lnag="ko")
    head
        title #{pageTitle} | Wetube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header 
            h1=pageTitle
            nav    
                ul
                    li 
                        a(href="/") Home
                    if loggedIn
                        li 
                            a(href="/users/edit") Edit Porfile
                        li 
                            a(href=`/users/${loggedInUser._id}`) My Porfile
                        li 
                            a(href="/users/logout") Log out 
                        li 
                            a(href="/videos/upload") Upload Video 
                        

                    else
                        li
                            a(href="/join") Join
                        li
                            a(href="/login") Login    
                    li 
                        a(href="/search") Search                        

        main
            block content
    include partials/footer.pug