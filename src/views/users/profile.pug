extends ../base2
include ../mixins/video


block content
    div.profile__container
        div.profile__data
            if `${(user.avatarUrl).substring(0,4)}` === "http"
                img(src=user.avatarUrl).avatar
            else 
                img(src="/" + user.avatarUrl).avatar
            h3=user.name
        div.video-grid
            each video in videos.reverse()
                a(href=`/videos/${video.id}`).video-mixin
                    div.video-mixin__thumb(style=`background-image:url(${"/" + video.thumbUrl});background-size:cover;background-position:center;`)
                    div.video-mixin__data
                        div.video-mixin__avatar
                            if `${(video.owner.avatarUrl).substring(0,4)}` === "http"
                                img(src=video.owner.avatarUrl)
                            else
                                img(src="/" + video.owner.avatarUrl)
                        div.video-mixin__info
                            span.video-mixin__title=video.title
                            div.video-mixin__meta
                                span #{video.owner.name}
                                span #{video.meta.views} Views
            else
                span.empty__message No videos found